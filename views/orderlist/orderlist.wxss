.view-orders .order-wrapper .footer .btn.waitingPay{
	background-color: #161823;
	color:white;
}
.view-orders .showPayPrice{
	font-size: 32rpx;
	font-weight:bolder;
}
.view-orders .showPayPrice:before{
	content:'￥';
	font-size: 28rpx;
	font-weight: bolder
}
.view-orders .yingfukuan{
	font-size: 26rpx
}

.view-orders .order-wrapper[data-status=WaitingProduction] .orderState{
	color:#FFA818;
}
.view-orders .order-wrapper[data-status=Canceled] .orderState,
.view-orders .order-wrapper[data-status=Finished] .orderState,
.view-orders .order-wrapper[data-status=Complete] .orderState{
	color:#9b9b9b;
}
.view-orders .order-wrapper[data-status=WaitingPay] .orderState{
	color:#FF502E;
}
.view-orders .order-wrapper[data-status=Producting] .orderState{
	color:#DCB87B;
}
.view-orders .ware-picture{
	width:100%;
	height:100%;
}
.view-orders .ower-btn-blank{
	width:200rpx;
}
.view-orders .detail-scroll-body{
	display: flex;
	position: relative;
	left:0;
	height: 460rpx
}
.view-orders .detail-scroll-body.left{
	left:-160rpx;
	transition: all .2s
}
.view-orders .detail-scroll-body.right{
	left:80;
	transition: all .2s
}
.view-orders .lower-blank{
	/*width:160px !important;*/
}
.view-orders .lower-blank image{
	width:160rpx;
	height:100%;
}
.view-orders .lower-btn{
	width:80rpx;
	height:80rpx;
}
.view-orders .lower-btn image{
	width:80rpx;
	height:80rpx;
}
.view-orders .lower{
	position:absolute;
	width:80px;
	right:0;
	height:100%;
	display:flex;
	justify-content:center;
	align-items:center;
}
.view-orders .scroll-orderDetail{
	z-index: 2
}
.view-orders .line-wrapper{
	position: relative;
	height: 460rpx;
	left: 0
}
.view-orders .line-wrapper[data-recordPos='h-hiden']{
	left: -750rpx;
	transition: left .2s;

}
.view-orders .line-wrapper[data-recordPos='v-hiden']{
	display: none

}


