@import "../../common/basestyle/basestyle.wxss";

page{
	height: 100%
}
.view-orders{
	background-color: #f8f8f8;
	/*padding-top: 10px;*/
	padding-bottom:100rpx;
}
.view-orders .scroll-view{
	height:100%;
	/*padding-top:10rpx;*/

}
.view-orders .scroll-view .first-order{
	padding-top:20rpx;
}
.view-orders .order-wrapper{
	width:710rpx;
	margin:0 20rpx 20rpx 20rpx;
	box-shadow: 0 8rpx 20rpx 0 rgba(0,0,0,0.05);
	display: flex;
	flex-wrap: wrap;
	position: relative;
	background-color:#fff;
	/*height: 420rpx;*/
	/*height: 412rpx*/
}
.view-orders .order-wrapper .order-part{
	width: 100%;
	display: flex;
	background: #FFFFFF;
}
.view-orders .order-wrapper .header{
	height:100rpx;
	align-items: center;
	justify-content: space-between;
	border-bottom:#e9e9e9 1rpx solid;
	padding: 0 30rpx;
}
.view-orders .order-wrapper .header .header-left{
	display: flex;
	flex-direction: column;
	/*margin-left: 30rpx;*/
}
.view-orders .order-wrapper .header .header-left .storeName{
	/*font-family: PingFangSC-Regular;*/
	font-size: 28rpx;
	color: #999999;
	line-height: 40rpx;
	/*letter-spacing: 0;*/
}
.view-orders .order-wrapper .header .header-left .orderId{
	font-size: 28rpx;
	color: #4A4A4A;
	line-height: 34rpx
}
.view-orders .order-wrapper .header .orderState{
	/*font-family: PingFangSC-Regular;*/
	font-size: 28rpx;
	color: black;
	/*margin-right:30rpx;*/
	/*letter-spacing: 0;*/
}
.view-orders .order-wrapper .body{
	height:218rpx;
}
.view-orders .order-wrapper .body .ware-img{
	width:160rpx;
	height:160rpx;
	position: relative;
	right:10rpx;
	margin-top: 26rpx;
}
.view-orders .order-wrapper .body .ware-detail{
	/*width:70%;*/
	margin-left:30rpx;
	/*margin-right:20rpx;*/
	position: relative;
	margin-top: 26rpx
}
.view-orders .order-wrapper .body .ware-detail .ware-name{
	font-family: PingFangSC-Regular;
	font-size: 36rpx;
	color: #4A4A4A;
	letter-spacing: 0;
	width:498rpx;
}
.view-orders .order-wrapper .body .ware-detail .ware-count{
	font-family: PingFangSC-Regular;
	font-size: 36rpx;
	color: #4a4a4a;
	letter-spacing: 0;
	width:498rpx;
}

/*.view-orders .order-wrapper .body .ware-detail .price:before{
	content:"共 ¥";
}*/

.view-orders .order-wrapper .body .ware-detail .price{
	position:absolute;
	bottom:40rpx;
	font-size:28rpx;
	color:#4A4A4A;
}

.view-orders .order-wrapper .body .ware-detail .ware-price{
	/*font-family: PingFangSC-Regular;*/
	font-size: 28rpx;
	color: #4A4A4A;
	/*letter-spacing: 0;*/
	margin-top: 30rpx
}
.view-orders .order-wrapper .footer{
	height:100rpx;
	/*margin-top:1px;*/
	align-items:center;
	width:100%;
	display:flex;
	justify-content:space-between;
	border-top:1rpx solid #e9e9e9;
	padding:0 20rpx 0 30rpx;
}
.view-orders .order-wrapper .footer .next-step{
	/*font-family: PingFangSC-Regular;*/
	font-size: 32rpx;
	color: #161823;
	/*margin-left:10px;*/
	font-size:28rpx;
	color:#161823;
	/*margin-left:30rpx;*/
	line-height:88rpx;
	/*letter-spacing: 0;*/
}

.view-orders .order-wrapper .block{
    background-color: #fff;
    width:200rpx;
    height:200rpx;
    box-shadow: 0 6rpx 12rpx 0 rgba(0,0,0,0.2);
    position: absolute;
}
.view-orders .order-wrapper .block.first{
    right:0;
    bottom:0;
    z-index: 1
  }
.view-orders .order-wrapper .block.second{
    right:4rpx;
    bottom:4rpx;
    z-index: 2
  }
.view-orders .order-wrapper .block.third{
    right:8rpx;
    bottom:8rpx;
    z-index: 3
  }
.view-orders .order-wrapper .qrcodeWrapper{
	width:88rpx;
	height:88rpx;
}
.view-orders .order-wrapper .footer .qrcodeWrapper .qrcode{
	width:100%;
	height:100%;
}
.view-orders .order-wrapper .footer .btn-group{
	display:flex;
}
.view-orders .order-wrapper .footer .btn{
