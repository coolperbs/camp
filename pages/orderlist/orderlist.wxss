.page-orderlist{
    background-color: #f8f8f8;
}
.page-orderlist .title{
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #f0f0f0;
    padding: 0 20rpx;
}
.page-orderlist .footer{
    height: 88rpx;
    border-top: 1px solid #f0f0f0
}
.page-orderlist .btn-wrapper{
    margin-right: 10rpx;
    display:flex;
    height:100%;
    align-items:center;
}
.page-orderlist .btn-wrapper .btn{
    border:1px solid #bababa;
    color:#bababa;
    border-radius:8rpx;
    padding:5rpx 12rpx;
    margin-right:10rpx;
}
.page-orderlist .btn-wrapper .btn.pay{
    border:1px solid #8bc34a;
    color:white;
    background-color: #8bc34a
}
.page-orderlist .activeinfo{
    margin-right: 0;
}
.page-orderlist .zan-card__detail {
    height: 200rpx;
    display:flex;
    flex-direction:column;
    justify-content:space-around;
}
.page-orderlist .zan-card__thumb{
    height: 200rpx;
}

.page-orderlist .category{
    background-color:rgb(229, 28, 35);
    color:white;
    position:absolute;
    top:60rpx;
    font-size:24rpx;
    z-index:100;
    height:35rpx;
    line-height:35rpx;
    border-radius:4rpx;
    padding:0 5rpx;

}
.page-orderlist .category .arror{
    width:0;
    height:0;
    border-top:10rpx solid transparent;
    border-right:10rpx solid transparent;
    border-bottom:10rpx solid rgb(229, 28, 35);
    border-left:10rpx solid transparent;
    position:absolute;
    left:5rpx;
    top:-15rpx;
    z-index:0;
}