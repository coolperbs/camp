page { height : 100%; font-size : 28rpx; }

.head, .body, .act { margin : 0 auto; width : 600rpx; }
.head { padding : 60rpx 0; margin-top : 20rpx; display: flex; flex-wrap : wrap; justify-content : center; border-bottom : solid 1px #E5E5E5; }
.head .logo { width : 160rpx; height : 160rpx; border-radius : 80rpx; }
.head .line { width : 100%; text-align: center; }
.head .title { font-size : 40rpx; color : #333; /*font-weight : bold; */margin-top : 50rpx; }
.head .sub-title { font-size : 26rpx; color : #999; margin-top : 26rpx; }

.body { padding : 68rpx 0; }
.body .info { font-size : 32rpx; color : #333; }
.body .item { font-size : 28rpx; margin-top : 50rpx; color : #999; }

.act { padding : 68rpx 0; display: flex; justify-content : space-between; }
.act .btn { font-size : 28rpx; width : 280rpx; height : 100rpx; line-height: 100rpx; text-align: center; border-radius: 50rpx; color : #fff; background-color : #96979B; box-shadow: 0 5px 10px rgba( 150, 151, 155, 0.2 );  }
.act .btn.primary { background-color : #DBC095; box-shadow: 0 5px 10px rgba( 219, 192, 149, 0.2 ); }

.poparea { height : 0; width : 0; overflow: hidden; position: fixed; top : 0; left :0; z-index: 1000; display: flex; align-items : center; justify-content : center; background-color: rgba( 0, 0, 0, 0 ); transition : background-color 0.5s ease; }
.poparea.show { width : 100%; height : 100%; background-color: rgba(0,0,0,0.5); }
.poparea .pop { padding : 40rpx; transform : traslate3d( 0, -20rpx, 0 ); opacity : 0; transition : all 0.5s ease; width : 520rpx; background-color: #fff; border-radius: 8rpx; }
.poparea .pop.show { opacity : 1; transform : translate3d( 0, 0, 0 ); }
.poparea .pop .title { font-size : 36rpx; margin-bottom : 40rpx; }
.poparea .pop .line { display: flex; justify-content : space-between; align-items : center; height : 120rpx;border-bottom : solid 1px #f0f0f0; }
.poparea .pop .line input { flex-grow : 1;height : 80rpx; }
.poparea .pop .line .code { width : 160rpx; padding : 0; height : 60rpx; border : solid 1px #161823; border-radius: 8rpx; font-size : 24rpx; display: flex; align-items : center; justify-content : center; margin-left : 40rpx; background-color: #fff; }
.poparea .pop .btn { width : 320rpx; height : 100rpx; background-color: #161823; color : #fff; font-size : 34rpx; margin : 0 auto; border-radius : 50rpx; margin-top: 40rpx; margin-bottom : 20rpx; }

