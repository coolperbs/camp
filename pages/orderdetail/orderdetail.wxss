.page-orderdetail .orderInfo{
    margin-top: 0;
}
.page-orderdetail .orderInfo .info{
    position:relative;
    padding:10rpx 30rpx;
    display:flex;
    align-items:center;
    line-height:1.4;
    font-size:28rpx;
}
.page-orderdetail  .btn-wrapper{
    margin-right: 10rpx;
    display:flex;
    height:100%;
    align-items:center;
}
.page-orderdetail  .btn-wrapper .btn{
    border:1px solid #bababa;
    color:#bababa;
    border-radius:8rpx;
    padding:5rpx 12rpx;
    margin-right:10rpx;
}
.page-orderdetail  .btn-wrapper .btn.pay{
    border:1px solid #8bc34a;
    color:white;
    background-color: #8bc34a

}

.page-orderdetail .category{
    background-color:rgb(229, 28, 35);
    color:white;
    position:absolute;
    top:60rpx;
    font-size:24rpx;
    z-index:100;
    height:35rpx;
    line-height:35rpx;
    border-radius:4rpx;
    padding:0 5rpx;

}
.page-orderdetail .category .arror{
    width:0;
    height:0;
    border-top:10rpx solid transparent;
    border-right:10rpx solid transparent;
    border-bottom:10rpx solid rgb(229, 28, 35);
    border-left:10rpx solid transparent;
    position:absolute;
    left:5rpx;
    top:-15rpx;
    z-index:0;
}