.page-orderdetail{
    padding-bottom: 120rpx;
    background-color: #f8f8f8;
}
.page-orderdetail .parent{
    width: 100%;
}
.page-orderdetail .child{
    width: 100%;
}
.page-orderdetail .bottom-bar{
    position:fixed;
    bottom:0;
    height:100rpx;
    align-items:center;
    width:100%;
    background-color:white;
    border-top:1px solid #f0f0f0;

}
.page-orderdetail .bottom-bar .fee{
    display:flex;
    align-items:center;
    height:100%;
    padding-left:20rpx;    
}
.page-orderdetail .bottom-bar .paybtn{
    background-color: #8bc34a;
    color: white;
    font-size: 32rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    
}

.page-orderdetail .zan-card__detail {
    height: 200rpx;
    display:flex;
    flex-direction:column;
    justify-content:space-around;
}
.page-orderdetail .zan-card__thumb{
    height: 200rpx;
}
.page-orderdetail .activeinfo{
    margin-right: 0;
}
