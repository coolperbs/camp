.page-checkout{
    padding-bottom: 120rpx;
    background-color: #f8f8f8;
}
.page-checkout .parent{
    width: 100%;
}
.page-checkout .child{
    width: 100%;
}
.page-checkout .bottom-bar{
    position:fixed;
    bottom:0;
    height:100rpx;
    align-items:center;
    width:100%;
    background-color:white;
    border-top:1px solid #f0f0f0;

}
.page-checkout .bottom-bar .fee{
    display:flex;
    align-items:center;
    height:100%;
    padding-left:20rpx;    
}
.page-checkout .bottom-bar .paybtn{
    background-color: #8bc34a;
    color: white;
    font-size: 32rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    
}

.page-checkout .zan-card__detail {
    height: 200rpx;
    display:flex;
    flex-direction:column;
    justify-content:space-around;
}
.page-checkout .zan-card__thumb{
    height: 200rpx;
}
.page-checkout .activeinfo{
    margin-right: 0;
}
.page-checkout .category{
    background-color:white;
    border:1px solid red;
    color:red;
    border-radius:8rpx;
    /* padding:15rpx 10rpx; */
    font-size:24rpx;

}
.page-checkout .category{
    background-color:rgb(229, 28, 35);
    color:white;
    position:absolute;
    /* top:60rpx; */
    font-size:24rpx;
    z-index:100;
    height:35rpx;
    line-height:35rpx;
    border-radius:4rpx;
    padding:0 5rpx;

}
.page-checkout .category .arror{
    width:0;
    height:0;
    border-top:10rpx solid transparent;
    border-right:10rpx solid transparent;
    border-bottom:10rpx solid rgb(229, 28, 35);
    border-left:10rpx solid transparent;
    position:absolute;
    left:5rpx;
    top:-15rpx;
    z-index:0;
}